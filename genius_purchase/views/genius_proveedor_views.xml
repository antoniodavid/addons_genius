<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Tree view for "model" -->
        <record id="genius_purchase_proveedor_tree" model="ir.ui.view">
            <field name="name">genius.purchase.proveedor.tree</field>
            <field name="model">genius.purchase.proveedor</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="Genius Proveedores">
                    <field name="name" />
                    <field name="supplierID" />
                </tree>
            </field>
        </record>

        <!-- Form view for "model" -->
        <record id="genius_purchase_proveedor_form" model="ir.ui.view">
            <field name="name">genius.purchase.proveedor.form</field>
            <field name="model">genius.purchase.proveedor</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="Genius Proveedor">
                    <header>
                        <button name="get_proveedores" string="Obtener proveedores" type="object" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" class="oe_inline" placeholder="Nombre" />
                            </h1>
                        </div>

                        <group>
                            <field name="supplierID" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search view for "model" -->
